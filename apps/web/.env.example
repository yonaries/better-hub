# ──────────────────────────────────────────────
# Authentication (required)
# ──────────────────────────────────────────────
# Create a GitHub OAuth App: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret

# Random 32-char string for session encryption (required)
# Generate with: openssl rand -hex 16
BETTER_AUTH_SECRET=generate_a_32_char_random_string

# Base URL of the app (required)
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ──────────────────────────────────────────────
# Database (required)
# ──────────────────────────────────────────────
# PostgreSQL connection string
# Default for docker compose: postgresql://postgres:postgres@localhost:54320/better_hub
DATABASE_URL=your_prisma_database_url

# ──────────────────────────────────────────────
# Redis (required)
# ──────────────────────────────────────────────
# Upstash Redis REST API for caching GitHub API data
# Default for docker compose (uses serverless-redis-http proxy):
UPSTASH_REDIS_REST_URL=http://localhost:8079
UPSTASH_REDIS_REST_TOKEN=local_token

# ──────────────────────────────────────────────
# AI — Ghost assistant (required for AI features)
# ──────────────────────────────────────────────
# OpenRouter API key — powers Ghost AI assistant
OPEN_ROUTER_API_KEY=your_open_router_api_key

# Model IDs (optional — defaults shown)
# GHOST_MODEL=moonshotai/kimi-k2.5
# GHOST_MERGE_MODEL=google/gemini-2.5-pro-preview

# Anthropic API key — used for specific AI tasks
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI API key (optional)
# OPENAPI_KEY=your_openai_api_key

# ──────────────────────────────────────────────
# E2B — code sandbox (optional)
# ──────────────────────────────────────────────
# E2B API key for sandboxed code execution
# E2B_API_KEY=your_e2b_api_key

# Custom E2B template (optional — falls back to default base image)
# Build with: cd apps/web && npx e2b template build
# E2B_TEMPLATE=your_e2b_template_id

# ──────────────────────────────────────────────
# Background jobs (optional)
# ──────────────────────────────────────────────
# Inngest for background job processing
# INNGEST_EVENT_KEY=your_inngest_event_key
# INNGEST_SIGNING_KEY=your_inngest_signing_key

# ──────────────────────────────────────────────
# Search & Memory (optional)
# ──────────────────────────────────────────────
# Mixedbread embeddings for semantic search
# MIXEDBREAD_API_KEY=your_mixedbread_api_key

# SuperMemory for AI conversation memory
# SUPER_MEMORY_API_KEY=your_super_memory_api_key

# ──────────────────────────────────────────────
# Integrations (optional)
# ──────────────────────────────────────────────
# Slack notifications
# SLACK_CLIENT_ID=your_slack_client_id
# SLACK_CLIENT_SECRET=your_slack_client_secret

# Vercel OIDC (for deployment auth)
# VERCEL_OIDC_TOKEN=your_vercel_oidc_token

# ──────────────────────────────────────────────
# Sentry (optional)
# ──────────────────────────────────────────────
# SENTRY_DSN=https://your-dsn@sentry.io/project-id
# SENTRY_AUTH_TOKEN=your_sentry_auth_token
